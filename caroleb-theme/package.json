{
	"name": "wp-b2",
	"version": "1.0.0",
	"description": "A blank WordPress classic theme for learning WordPress theming",
	"author": "Your Name",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"wordpress",
		"theme",
		"education",
		"scss"
	],
	"scripts": {
		"watch": "npm-run-all --parallel watch:*",
		"watch:scss": "sass --watch assets/scss/main.scss:assets/css/main.css --style expanded --source-map",
		"build": "npm-run-all build:*",
		"build:scss": "sass assets/scss/main.scss:assets/css/main.css --style compressed --no-source-map",
		"lint": "npm-run-all lint:*",
		"lint:scss": "stylelint 'assets/scss/**/*.scss'",
		"lint:js": "eslint assets/js/**/*.js",
		"lint:php": "composer run-script phpcs",
		"format": "npm-run-all format:*",
		"format:scss": "stylelint 'assets/scss/**/*.scss' --fix",
		"format:js": "eslint assets/js/**/*.js --fix",
		"format:php": "composer run-script phpcbf"
	},
	"dependencies": {
		"@wordpress/eslint-plugin": "^17.0.0",
		"@wordpress/stylelint-config": "^23.0.0",
		"eslint": "^8.50.0",
		"npm-run-all": "^4.1.5",
		"postcss-scss": "^4.0.9",
		"prettier": "^3.0.3",
		"sass": "^1.69.0",
		"stylelint": "^16.25.0",
		"stylelint-scss": "^6.4.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	}
}
